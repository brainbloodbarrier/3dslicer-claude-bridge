{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(uv run:*)",
      "Bash(git:*)",
      "Bash(pytest:*)",
      "Read(**/src/**)",
      "Read(**/tests/**)",
      "Read(**/ref/**)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ“‹ Project: NC_Slicer-Claude-Bridge | See TODO.md for pending items | Run /bootstrap-env if missing plugins'"
          }
        ]
      }
    ]
  },
  "recommendedPlugins": {
    "core": [
      "context7",
      "feature-dev",
      "code-review",
      "commit-commands",
      "pr-review-toolkit"
    ],
    "python": [
      "pyright-lsp"
    ],
    "integrations": [
      "greptile"
    ],
    "styles": [
      "explanatory-output-style",
      "learning-output-style"
    ]
  }
}
